nav.navbar.navbar-inverse.navbar-fixed-top
  div.container
    div.navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
        span.sr-only Toggle navigation
      a.navbar-brand(href='#') Rabot
    div#navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left
        li.active
          a(href='#') Home
        li
          a#status(href='#game') Status
      form#navbar_before_login.navbar-form.navbar-right
        div.form-group
          input#navbar_username.form-control(type='text' placeholder='Username')
        div.form-group
          input#navbar_password.form-control(type='password' placeholder='Password')
        button#navbar_login_button.btn.btn-primary(type='button') Login
      div#navbar_after_login
        form.navbar-form.navbar-right
          button#navbar_logout_button.btn.btn-danger(type='button') Logout
        ul.nav.navbar-nav.navbar-right
          p#navbar_message.navbar-text Welcome
